{
    "standard.enable": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always"
    },
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.defaultFormatter": null
    },
    "[typescript]": {
        "editor.defaultFormatter": null
    },
    "standard.autoFixOnSave": true,
    "standard.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
}